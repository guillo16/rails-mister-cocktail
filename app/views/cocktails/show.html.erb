
  <div class="container">
    <h1><%= @cocktail.name %></h1>

       <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
        <br>
        <br>
        <ul>
          <% @doses.each do |dose| %>
          <li><%= dose.description %> <br><%= link_to icon('fas', 'trash'), dose_path(dose), method: :delete, data: { confirm: "are you sure?" }, class: 'btn-danger btn-xs'%></li>
          <% end %>
        </ul>


      <%= simple_form_for([@cocktail, @dose]) do |f| %>
      <div class="form-group">
        <%= f.input :description %>
        <%= f.association :ingredient %>

        <%= f.submit class: ' btn-danger btn-lg' %>
        <% end %>
      </div>



    <%= link_to "Go Back", root_path, class: 'btn btn-primary btn-lg' %>
</div>

